{
  "name": "stripe-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-format": "prettier --check src/**/*.{js,jsx} pages/**/*.{js,jsx}",
    "format": "prettier --write src/**/*.{js,jsx} pages/**/*.{js,jsx}",
    "lint-fix": "eslint --fix src/**/*.{js,jsx} pages/**/*.{js,jsx}",
    "check-lint": "eslint --ext js --ext jsx src/**/*.{js,jsx} pages/**/*.{js,jsx}",
    "test-all": "npm run lint-fix && npm run check-format && npm run check-lint && npm run build",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "next": "10.2.3",
    "prism-react-renderer": "^1.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.34.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "eslint": "^7.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "tailwindcss": "^2.1.2"
  }
}
